<div class="content">
  <!--Render logo&title-->
  <div class="content_val">
    <div class="row br_red">
      <div class="col-md-2 col-xs-3 block row_pad br_red"><%= image_tag(("logo.png"), class: 'img-responsive') %></div>
      <div class="col-md-10 col-xs-9 get_consult fix-pad-mar br_red">
        <div class="col-md-12 col-xs-12 fix-pad-mar"><p class="fix_get"><a href="#">Получить консультацию</a></p></div>
        <div class="col-md-12 col-xs-12 pad-xs-fix title-logo text-center br_red"><%= image_tag("title.png") %></div>
      <div class="col-md-12 hidden-xs hidden-sm text-center br_red fix_pad_lr"><%= render partial: 'calc_values' %></div>
      </div>
      <div class="col-md-12 hidden-md text-center br_red fix_pad_lr"><%= render partial: 'calc_values_xs' %></div>
      <div class="col-sm-12 text-center br_red fix_pad_lr"><%= render partial: 'calc_values_sm' %></div>
    </div>
  </div>
  <!--Horizontal line block-->
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11"><hr></div>
  </div>
  <!--Render card calculator form-->
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11 fix_mar_p">
      <%= render partial: 'calc_form' %>
    </div>
  </div>

  <div class="emt_row"></div>
  <!--Render user's details block -->
  <div class="content_reg" id="displayBtnClick">
    <%= render partial: 'reg_user' %>
  </div>
  <!--Render submit button block 'Checkout'-->
  <div class="content_btn_sbm" id="fBtn">
    <%= render partial: 'sbm' %>
  </div>
  <!--Render socials button's block-->
  <div class="content_btn_soc">
    <%= render partial: 'btns_socials' %>
  </div>
</div>
